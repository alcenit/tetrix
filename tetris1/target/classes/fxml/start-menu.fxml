<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.cenit.tetris1.controller.StartMenuController"
      styleClass="start-menu-container">
   
   <Label text="TETRIS" styleClass="game-title"/>
   
   <VBox alignment="CENTER" spacing="15.0" styleClass="buttons-container">
      <Button fx:id="startButton" text="Iniciar Juego" 
              onAction="#handleStartButton" 
              styleClass="menu-button start-button"/>
      
      <Button fx:id="exitButton" text="Salir" 
              onAction="#handleExitButton" 
              styleClass="menu-button exit-button"/>
   </VBox>
   
   <!-- Versión con línea -->
   <StackPane styleClass="version-container">
      <Label fx:id="versionLabel" text="Versión 1.0" styleClass="version-label"/>
      <Line fx:id="versionLine" styleClass="version-line" 
            startX="-40" endX="40" startY="0" endY="0"/>
   </StackPane>
   
</VBox>